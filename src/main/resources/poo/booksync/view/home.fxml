<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="poo.booksync.controller.MainController">
   <BorderPane prefHeight="521.0" prefWidth="763.0" style="-fx-background-color: #f5f5f5;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <left>
         <fx:include source="sidebar.fxml" />
      </left>
      <center>
         <TabPane BorderPane.alignment="CENTER">
            <Tab text="Liste des livres">
               <VBox prefHeight="200.0" prefWidth="100.0" style="-fx-padding: 10;">
                  <TableView fx:id="tableView">
                     <columns>
                        <TableColumn prefWidth="75.0" text="ID" />
                        <TableColumn prefWidth="75.0" text="Title" />
                        <TableColumn prefWidth="75.0" text="AuthorId" />
                        <TableColumn prefWidth="75.0" text="Published Year" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </VBox>
            </Tab>
            <Tab text="Ajouter un livre">
               <VBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                  <VBox alignment="CENTER" maxWidth="300" VBox.vgrow="ALWAYS">
                     <VBox alignment="TOP_CENTER" prefWidth="518.0" spacing="20" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 5;">
                        <Label style="-fx-font-size: 24; -fx-font-weight: bold;" text="Créer un livre" />
                        <VBox spacing="2">
                           <Label text="Titre" />
                           <TextField fx:id="titleField" promptText="Entrez le titre" />
                        </VBox>
                        <VBox spacing="2">
                           <Label text="ISBN" />
                           <TextField fx:id="isbnField" promptText="Entrez le ISBN" />
                        </VBox>
                        <VBox spacing="2">
                           <Label text="Autheur" />
                           <TextField fx:id="authorField" promptText="Entrez le nom de l'autheur" />
                        </VBox>
                        <VBox layoutX="40.0" layoutY="154.0" spacing="2">
                           <children>
                              <Label text="Date de publication" />
                              <DatePicker prefHeight="26.0" prefWidth="249.0" promptText="Sélectionner la date" />
                           </children>
                        </VBox>
                        <Button maxWidth="Infinity" style="-fx-background-color: #2196f3; -fx-text-fill: white;" text="Enregistrer" />
                     </VBox>
                  </VBox>
               </VBox>
            </Tab>
         </TabPane>
      </center>
   </BorderPane>
</AnchorPane>
