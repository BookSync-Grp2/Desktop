<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="200.0" prefWidth="100.0" style="-fx-padding: 10;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="poo.booksync.controller.TableLoanController">
    <TableView fx:id="tableView">
        <columns>
            <TableColumn prefWidth="75.0" text="Loan ID" />
            <TableColumn prefWidth="75.0" text="User ID" />
            <TableColumn prefWidth="75.0" text="Book ID" />
            <TableColumn prefWidth="100.0" text="Start Date" />
            <TableColumn prefWidth="100.0" text="End Date" />
            <TableColumn prefWidth="75.0" text="Retrieved" />
            <TableColumn prefWidth="75.0" text="Returned" />
            <TableColumn fx:id="actionColumn" prefWidth="75.0" text="Returned" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
</VBox>
