<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="poo.booksync.controller.CreateBookController">
    <VBox alignment="CENTER" maxWidth="300" VBox.vgrow="ALWAYS">
        <VBox alignment="TOP_CENTER" prefWidth="518.0" spacing="20" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 5;">
            <Label style="-fx-font-size: 24; -fx-font-weight: bold;" text="Créer un livre" />
            <VBox spacing="2">
                <Label text="Titre" />
                <TextField fx:id="titleField" promptText="Entrez le titre" />
            </VBox>
            <VBox spacing="2">
                <Label text="ISBN" />
                <TextField fx:id="isbnField" promptText="Entrez le ISBN" />
            </VBox>
            <VBox spacing="2">
                <Label text="Autheur" />
                <TextField fx:id="authorField" promptText="Entrez le nom de l'autheur" />
            </VBox>
            <VBox layoutX="40.0" layoutY="154.0" spacing="2">
                <Label text="Date de publication"/>
                <DatePicker fx:id="publishDatePicker" prefHeight="26.0" prefWidth="249.0" promptText="Sélectionner la date"/>
            </VBox>
            <Button maxWidth="Infinity" onAction="#handleCreateBook" style="-fx-background-color: #2196f3; -fx-text-fill: white;" text="Enregistrer" />
        </VBox>
    </VBox>
</VBox>
