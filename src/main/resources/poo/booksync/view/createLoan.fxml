<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="poo.booksync.controller.LoanController">
    <VBox alignment="CENTER" maxWidth="300" VBox.vgrow="ALWAYS">
        <VBox alignment="TOP_CENTER" prefWidth="518.0" spacing="20" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 5;">
            <Label style="-fx-font-size: 24; -fx-font-weight: bold;" text="Créer un prêt" />
            <VBox spacing="2">
                <Label text="User ID" />
                <TextField fx:id="userIdField" promptText="Entrez l'ID utilisateur" />
            </VBox>
            <VBox spacing="2">
                <Label text="Book ID" />
                <TextField fx:id="bookIdField" promptText="Entrez l'ID du livre" />
            </VBox>
            <VBox spacing="2">
                <Label text="Date de début" />
                <DatePicker fx:id="startDatePicker" promptText="Sélectionner la date" />
            </VBox>
            <VBox spacing="2">
                <Label text="Date de fin" />
                <DatePicker fx:id="endDatePicker" promptText="Sélectionner la date" />
            </VBox>
            <Button maxWidth="Infinity" onAction="#handleCreateLoan" style="-fx-background-color: #2196f3; -fx-text-fill: white;" text="Enregistrer" />
        </VBox>
    </VBox>
</VBox>
