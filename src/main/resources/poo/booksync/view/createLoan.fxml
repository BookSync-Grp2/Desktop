<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="poo.booksync.controller.CreateLoanController">
    <VBox alignment="CENTER" maxWidth="300" VBox.vgrow="ALWAYS">
        <VBox alignment="TOP_CENTER" prefWidth="518.0" spacing="20" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 5;">
            <Label style="-fx-font-size: 24; -fx-font-weight: bold;" text="Créer un prêt" />
            <!-- Sélection d'un utilisateur -->
            <VBox spacing="2">
                <Label text="Sélectionner un utilisateur" />
                <ComboBox fx:id="userComboBox" promptText="Choisissez un utilisateur" />
            </VBox>
            <!-- Sélection d'un livre -->
            <VBox spacing="2">
                <Label text="Sélectionner un livre" />
                <ComboBox fx:id="bookComboBox" promptText="Choisissez un livre" />
            </VBox>
            <!-- Bouton Enregistrer -->
            <Button maxWidth="Infinity" style="-fx-background-color: #2196f3; -fx-text-fill: white;" text="Enregistrer" onAction="#handleSaveLoan" />
        </VBox>
    </VBox>
</VBox>
