<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="poo.booksync.controller.LoansController">
    <BorderPane prefHeight="521.0" prefWidth="763.0" style="-fx-background-color: #f5f5f5;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <left>
            <fx:include source="sidebar.fxml" />
        </left>
        <center>
            <TabPane BorderPane.alignment="CENTER">
                <Tab text="Liste des prêts">
                    <VBox prefHeight="200.0" prefWidth="100.0" style="-fx-padding: 10;">
                        <TableView fx:id="tableView">
                            <columns>
                                <TableColumn prefWidth="75.0" text="Loan ID" />
                                <TableColumn prefWidth="75.0" text="User ID" />
                                <TableColumn prefWidth="75.0" text="Book ID" />
                                <TableColumn prefWidth="100.0" text="Start Date" />
                                <TableColumn prefWidth="100.0" text="End Date" />
                                <TableColumn prefWidth="75.0" text="Retrieved" />
                                <TableColumn prefWidth="75.0" text="Returned" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </VBox>
                </Tab>
                <Tab text="Ajouter un prêt">
                    <VBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                        <VBox alignment="CENTER" maxWidth="300" VBox.vgrow="ALWAYS">
                            <VBox alignment="TOP_CENTER" prefWidth="518.0" spacing="20" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 5;">
                                <Label style="-fx-font-size: 24; -fx-font-weight: bold;" text="Créer un prêt" />
                                <VBox spacing="2">
                                    <Label text="User ID" />
                                    <TextField fx:id="userIdField" promptText="Entrez l'ID utilisateur" />
                                </VBox>
                                <VBox spacing="2">
                                    <Label text="Book ID" />
                                    <TextField fx:id="bookIdField" promptText="Entrez l'ID du livre" />
                                </VBox>
                                <VBox spacing="2">
                                    <Label text="Date de début" />
                                    <DatePicker fx:id="startDatePicker" promptText="Sélectionner la date" />
                                </VBox>
                                <VBox spacing="2">
                                    <Label text="Date de fin" />
                                    <DatePicker fx:id="endDatePicker" promptText="Sélectionner la date" />
                                </VBox>
                                <Button maxWidth="Infinity" style="-fx-background-color: #2196f3; -fx-text-fill: white;" text="Enregistrer" />
                            </VBox>
                        </VBox>
                    </VBox>
                </Tab>
            </TabPane>
        </center>
    </BorderPane>
</AnchorPane>
